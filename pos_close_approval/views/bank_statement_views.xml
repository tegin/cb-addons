<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="view_bank_statement_line_form" model="ir.ui.view">
        <field name="name">bank.statement.line.form</field>
        <field name="model">account.bank.statement.line</field>
        <field name="inherit_id" ref="account.view_bank_statement_line_form"/>
        <field name="arch" type="xml">
            <field name="ref" position="after">
                <field name="pos_session_id" invisible="1"/>
                <field name="journal_entry_ids" invisible="1"/>
                <field name="pos_session_state" invisible="1"/>
                <field name="account_id"
                       attrs="{'invisible':[('pos_session_state', '!=', 'pending_approval'),('journal_entry_ids','!=', False)]}"/>
            </field>
            <group position="before">
                <header>
                    <button name="%(action_statement_change_account)d"
                            type="action"
                            string="Change account"
                            class="oe_highlight"
                            attrs="{'invisible':[('pos_session_state', '!=', 'pending_approval')]}"
                />
                </header>
            </group>
        </field>
    </record>
</odoo>
