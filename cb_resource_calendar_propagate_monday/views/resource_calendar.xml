<odoo>

    <record model="ir.ui.view" id="resource_calendar_form">
        <field name="name">resource.calendar.form (in cb_resource_calendar_clone_monday)</field>
        <field name="model">resource.calendar</field>
        <field name="inherit_id" ref="resource.resource_calendar_form"/>
        <field name="arch" type="xml">
            <xpath expr="//notebook" position="before">
                <button name="propagate_mondays" string="Clone Mondays" type="object" class="oe_highlight" group="hr.group_hr_manager"/>
            </xpath>
        </field>
    </record>

    <record model="ir.ui.view" id="resource_calendar_attendance_tree_view">
        <field name="name">resource.calendar.attendance.tree (in cb_resource_calendar_clone_monday)</field>
        <field name="model">resource.calendar.attendance</field>
        <field name="inherit_id" ref="resource.view_resource_calendar_attendance_tree"/>
        <field name="arch" type="xml">
            <field name="name" position="attributes">
                <attribute name="invisible">1</attribute>
            </field>
            <field name="dayofweek" position="attributes">
                <attribute name="invisible">1</attribute>
            </field>
            <field name="name" position="before">
                <field name="dayofweek"/>
            </field>
        </field>
    </record>

</odoo>
