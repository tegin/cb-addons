<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="hr_holidays.hr_department_view_kanban" model="ir.ui.view">
        <field name="active">False</field>
    </record>
    <record id="hr_attendance.hr_department_view_kanban" model="ir.ui.view">
        <field name="active">False</field>
    </record>

    <record id="hr.hr_department_view_kanban" model="ir.ui.view">
        <field name="name">hr.department.kanban</field>
        <field name="model">hr.department</field>
        <field name="arch" type="xml">
            <kanban>
                <field name="id"/>
                <templates>
                    <t t-name="kanban-box">
                        <div class="oe_kanban_global_click">
                            <div class="o_kanban_image">
                                <img t-att-src="kanban_image('hr.department', 'image_medium', record.id.raw_value)"/>
                                <span title="Employees"><i class="fa fa-users"/> <field name="total_employee"/></span>
                            </div>
                            <div class="oe_kanban_details">
                                <div class="o_kanban_record_top">
                                    <div class="o_kanban_record_headings">
                                        <strong><field name="name"/></strong>
                                    </div>
                                </div>
                                <ul>
                                    <li t-if="record.manager_id.raw_value" class="o_kanban_record_subtitle"><i class="fa fa-user"/> <field name="manager_id"/></li>
                                    <li t-if="record.parent_id.raw_value" class="o_kanban_record_subtitle"><i class="fa fa-mail-forward"/> <field name="parent_id"/></li>
                                </ul>
                                <br/>
                                <br/>
                                <div class="o_kanban_button">
                                    <button class="btn btn-sm btn-primary" name="%(hr.act_employee_from_department)d" type="action">Employees</button>
                                </div>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <record id="view_department_form" model="ir.ui.view">
        <field name="name">hr.department.form</field>
        <field name="model">hr.department</field>
        <field name="inherit_id" ref="hr.view_department_form"/>
        <field name="arch" type="xml">
            <field name="company_id" position="attributes">
                <attribute name="invisible">1</attribute>
            </field>
        </field>
    </record>

    <record id="view_department_tree" model="ir.ui.view">
        <field name="name">hr.department.tree</field>
        <field name="model">hr.department</field>
        <field name="inherit_id" ref="hr.view_department_tree"/>
        <field name="arch" type="xml">
            <tree>
                <field name="company_id" position="attributes">
                    <attribute name="invisible">1</attribute>
                </field>
            </tree>
        </field>
    </record>
</odoo>
