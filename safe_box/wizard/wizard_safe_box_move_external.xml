<odoo>

    <record id="wizard_safe_box_move_external" model="ir.ui.view">
        <field name="name">wizard.safe.box.move.external</field>
        <field name="model">wizard.safe.box.move.external</field>
        <field name="arch" type="xml">
            <form string="Create safe box move">
                <group>
                    <field name="safe_box_group_id" invisible="1"/>
                    <field name="account_ids" invisible="1"/>
                    <field name="safe_box_id"/>
                    <field name="journal_id"/>
                    <field name="account_id"/>
                    <field name="company_id" readonly="1"/>
                    <field name="amount"/>
                    <field name="currency_id" invisible="1"/>
                </group>
                <footer>
                    <button name="run"
                            string="Create"
                            type="object"
                            class="oe_highlight"/>
                    or
                    <button
                            name="action_cancel"
                            string="Cancel"
                            class="oe_link"
                            special="cancel"
                    />
                </footer>
            </form>
        </field>
    </record>

    <act_window id="wizard_safe_box_move_external_action"
                name="Generate move"
                res_model="wizard.safe.box.move.external"
                view_mode="form"
                view_type="form"
                target="new"/>

</odoo>
